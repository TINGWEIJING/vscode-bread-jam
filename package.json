{
  "name": "color-variable-alpha",
  "displayName": "Color Variable Alpha",
  "description": "Color variable by token",
  "version": "0.0.1",
  "publisher": "tingcode.com",
  "engines": {
    "vscode": "^1.87.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "color-variable-alpha.promptRenderPatternSelection",
        "title": "Color Variable: Select Render Pattern"
      },
      {
        "command": "color-variable-alpha.clearDecorationsTemporarily",
        "title": "Color Variable: Clear Decorations Temporarily"
      },
      {
        "command": "color-variable-alpha.reloadDecorations",
        "title": "Color Variable: Reload Decorations"
      },
      {
        "command": "color-variable-alpha.turnOnOrOff",
        "title": "Color Variable: Turn On/Off"
      }
    ],
    "configuration": {
      "title": "Color Variable Alpha",
      "properties": {
        "color-variable-alpha.fadeOutGradientSteps": {
          "order": 0,
          "type": "array",
          "items": {
            "type": "number"
          },
          "multipleOf": 0.01,
          "minimum": 0,
          "maximum": 1,
          "default": [
            1,
            0.93,
            0.87,
            0.8,
            0.73,
            0.67,
            0.6,
            0.53,
            0.47,
            0.4,
            0.33,
            0.27,
            0.2,
            0.13,
            0.07,
            0
          ],
          "minItems": 16,
          "maxItems": 16,
          "description": "Gradient steps for fade in."
        },
        "color-variable-alpha.fadeInGradientSteps": {
          "order": 0,
          "type": "array",
          "items": {
            "type": "number"
          },
          "multipleOf": 0.01,
          "minimum": 0,
          "maximum": 1,
          "default": [
            0,
            0.07,
            0.13,
            0.2,
            0.27,
            0.33,
            0.4,
            0.47,
            0.53,
            0.6,
            0.67,
            0.73,
            0.8,
            0.87,
            0.93,
            1
          ],
          "minItems": 16,
          "maxItems": 16,
          "description": "Gradient steps for fade in."
        },
        "color-variable-alpha.renderDelay": {
          "order": 0,
          "type": "integer",
          "multipleOf": 10,
          "minimum": 100,
          "default": 500,
          "description": "Delay in milliseconds before rendering the color variable. (Debounce)"
        },
        "color-variable-alpha.ignoreFirstSubToken": {
          "order": 1,
          "type": "boolean",
          "default": false,
          "markdownDescription": "Ignore the first sub token. Example: ```isTrue; // `is` is ignore```"
        },
        "color-variable-alpha.excludeFileExtensions": {
          "order": 2,
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "uniqueItems": true,
          "description": "Exclude file extensions"
        },
        "color-variable-alpha.defaultPattern": {
          "order": 3,
          "type": "string",
          "default": "Subtext - Fade Out Gradient - Unique Subtext",
          "enum": [
            "Subtext - Fade Out Gradient - Unique Subtext",
            "Subtext - Fade Out Gradient - Unique Text",
            "Subtext - Fade Out Gradient - Commonly",
            "Subtext - Fade In Gradient - Unique Subtext",
            "Subtext - Fade In Gradient - Unique Text",
            "Subtext - Fade In Gradient - Commonly",
            "First Character - Solid Color - Unique Subtext",
            "First Character - Solid Color - Unique Text",
            "First Character - Solid Color - Commonly",
            "Whole Text - Emoji",
            "Subtext - Solid Color - Unique Subtext"
          ],
          "enumItemLabels": [
            "01",
            "02",
            "03",
            "04",
            "05",
            "06",
            "07",
            "08",
            "09",
            "10",
            "11"
          ],
          "description": "Default pattern."
        },
        "color-variable-alpha.commonColor": {
          "order": 7,
          "type": "string",
          "default": "#FAFAFA",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "description": "Common color."
        },
        "color-variable-alpha.solidColors": {
          "order": 5,
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "default": [
            "#d4b300",
            "#6d8891",
            "#886288",
            "#c5eff7",
            "#c8f7c5",
            "#7fffd4"
          ],
          "description": "Solid colors."
        },
        "color-variable-alpha.gradientColors": {
          "order": 6,
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
          },
          "default": [
            "#d4b300",
            "#6d8891",
            "#886288",
            "#c5eff7",
            "#c8f7c5",
            "#7fffd4"
          ],
          "description": "Gradient colors. Will use solid colors if is empty."
        },
        "color-variable-alpha.targetedSemanticTokenTypes": {
          "order": 5,
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "namespace",
              "class",
              "enum",
              "interface",
              "struct",
              "typeParameter",
              "type",
              "parameter",
              "variable",
              "property",
              "enumMember",
              "decorator",
              "event",
              "function",
              "method",
              "macro",
              "label",
              "comment",
              "string",
              "keyword",
              "number",
              "regexp",
              "operator"
            ]
          },
          "default": [
            "variable",
            "parameter",
            "property"
          ],
          "uniqueItems": true,
          "description": "Targeted Semantic token types to render."
        },
        "color-variable-alpha.targetedSemanticModifiers": {
          "order": 5,
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "declaration",
              "definition",
              "readonly",
              "static",
              "deprecated",
              "abstract",
              "async",
              "modification",
              "documentation",
              "defaultLibrary"
            ]
          },
          "default": [
            "declaration",
            "definition",
            "readonly",
            "static",
            "deprecated",
            "abstract",
            "async",
            "modification",
            "documentation",
            "defaultLibrary"
          ],
          "uniqueItems": true,
          "description": "Targeted Semantic modifiers to render."
        },
        "color-variable-alpha.semanticForegroundColors": {
          "order": 6,
          "type": "object",
          "default": {
            "variable": "#9CDCFE",
            "variable:readonly": "#4FC1FF",
            "variable:declaration,readonly": "#4FC1FF",
            "variable:declaration,readonly,local": "#4FC1FF",
            "parameter": "#9CDCFE",
            "property": "#9CDCFE"
          },
          "patternProperties": {
            "^[a-zA-Z]+(?:[a-zA-Z0-9]*)(?::[a-zA-Z0-9]+(?:,[a-zA-Z0-9]+)*)?$": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "description": "Foreground color for semantic token."
            }
          },
          "additionalProperties": false,
          "description": "Semantic token foreground colors for fade in/out gradient."
        },
        "color-variable-alpha.defaultSemanticForegroundColor": {
          "order": 7,
          "type": "string",
          "default": "#569CD6",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "description": "Default color for semantic foreground color."
        },
        "color-variable-alpha.semanticModifierForegroundColors": {
          "order": 6,
          "type": "object",
          "default": {
            "declaration": "#000000",
            "definition": "#000000",
            "readonly": "#000000"
          },
          "patternProperties": {
            "^[a-zA-Z]+[a-zA-Z0-9]*$": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "description": "Foreground color for semantic modifier."
            }
          },
          "additionalProperties": false,
          "description": "Semantic modifier foreground colors for fade in/out gradient."
        }
      }
    },
    "keybindings": [
      {
        "command": "color-variable-alpha.turnOnOrOff",
        "key": "alt+b alt+j"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
