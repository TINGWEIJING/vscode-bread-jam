{
  "name": "color-variable-alpha",
  "displayName": "Color Variable Alpha",
  "description": "Color variable by token",
  "version": "0.0.1",
  "publisher": "tingcode.com",
  "engines": {
    "vscode": "^1.87.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "color-variable-alpha.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Color Variable Alpha",
      "properties": {
        "colorVariableAlpha.renderDelay": {
          "order": 0,
          "type": "integer",
          "multipleOf": 10,
          "minimum": 100,
          "default": 500,
          "description": "Delay in milliseconds before rendering the color variable. (Debounce)"
        },
        "colorVariableAlpha.ignoreFirstSubToken": {
          "order": 1,
          "type": "boolean",
          "default": false,
          "markdownDescription": "Ignore the first sub token. Example: ```isTrue; // `is` is ignore```"
        },
        "colorVariableAlpha.excludeFileExtensions": {
          "order": 2,
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Exclude file extensions"
        },
        "colorVariableAlpha.defaultPattern": {
          "order": 3,
          "type": "string",
          "default": "01",
          "enum": [
            "01",
            "02"
          ],
          "enumDescriptions": [
            "Pattern 01",
            "Pattern 02"
          ],
          "enumItemLabels": [
            "Unique sub text",
            "Unique text"
          ],
          "description": "Default pattern."
        },
        "colorVariableAlpha.commonColor": {
          "order": 4,
          "type": "string",
          "default": "#000000",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "description": "Common color."
        },
        "colorVariableAlpha.targetedSemanticTokenTypes": {
          "order": 5,
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "namespace",
              "class",
              "enum",
              "interface",
              "struct",
              "typeParameter",
              "type",
              "parameter",
              "variable",
              "property",
              "enumMember",
              "decorator",
              "event",
              "function",
              "method",
              "macro",
              "label",
              "comment",
              "string",
              "keyword",
              "number",
              "regexp",
              "operator"
            ]
          },
          "default": [
            "variable",
            "parameter",
            "property"
          ],
          "description": "Targeted Semantic token types to render."
        },
        "colorVariableAlpha.semanticTokenTypeForegroundColors": {
          "order": 6,
          "type": "object",
          "default": {
            "variable": "#000000",
            "parameter": "#000000",
            "property": "#000000"
          },
          "patternProperties": {
            "^[a-zA-Z]+[a-zA-Z0-9]*$": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
              "description": "Foreground color for semantic token types."
            }
          },
          "additionalProperties": false,
          "description": "Semantic token type foreground colors for fade in/out gradient."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
